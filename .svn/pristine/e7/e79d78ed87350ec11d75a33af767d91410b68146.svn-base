/* pages/category/index.wxss */

/* banner swiper */

.page {
  height: 100%;
  position: relative;
}

.banner-wrap {
  height: 350rpx;
  padding: 0 20rpx 0 20rpx 
}

.swiper-wrap {
  height: 350rpx;
}

.swiper-wrap image {
  width: 100% !important;
  height: 350rpx;
  border-radius: 10rpx;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
  margin-bottom: 20rpx;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

/* 筛选bar */

.filter-bar {
  background-color: #fff;
  height: 80rpx;
  width: 100%;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.filter-bar .filter-item {
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.filter-list {
  position: absolute;
  top: 82rpx;
  left: -1rpx;
  color: #333;
  width: 100%;
  background-color: #fff;
  border-left: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  border-top: 0 none;
  box-shadow: 1px 1px 1px -1px #e5e5e5;
}

.filter-list-item {
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.filter-list-item {
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.col-red {
  color: #21c5b4;
  background: #fff;
}

.filter-list-box {
  padding: 20rpx;
}

.filter-list-flex {
  display: flex;
}

.filter-list-cate {
  width: 30%;
  margin-left: 20rpx;
  text-align: center;
  border-radius: 4px;
  color: #333;
  line-height: 56rpx;
  background-color: #e5e5e5;
}

.filter-bar .filter-item text {
  display: flex;
}

.filter-bar .filter-item.col-red {
  color: #f40;
}

.filter-bar .filter-item icon {
  display: flex;
}

.hot-goods {
  background-color: #fff;
}

.hot-goods .hot-con {
  padding: 32rpx 32rpx 0 32rpx;
}

.hot-goods .hot-con .box {
  width: 48%;
  display: flex;
  flex-direction: column;
  align-items: center;
  float: left;
  margin-right: 4%;
  margin-bottom: 40rpx;
}

.hot-goods .hot-con .box:nth-child(2n) {
  margin-right: 0;
}

.hot-goods .hot-con .box .good-img {
  width: 245rpx;
  height: 245rpx;
  border-radius: 5rpx;
}

.hot-goods .hot-con .box .title {
  padding-top: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  text-align: center;
}

.hot-goods .hot-con .box .title .brand {
  font-size: 28rpx;
  color: #666;
  width: 100%;
}

.hot-goods .hot-con .box .title .series {
  font-size: 24rpx;
  color: #999;
  width: 100%;
}

.hot-goods .hot-con .box .title .price {
  font-size: 26rpx;
  color: #f40;
}

.no-goods {
  height: 500rpx;
  color: #999;
  text-align: center;
  font-size: 26rpx;
}

.no-goods .iconfont {
  padding-top: 120rpx;
  font-size: 72rpx;
  font-weight: 600;
  line-height: 80rpx;
  color: rgb(190, 186, 186);
}

.tabLayer-warp {
  background-color: #fff;
  /* display: flex; */
}

.left-nav {
  float: left;
  font-size: 26rpx;
  color: #999;
  width: 180rpx;
  background: #f5f5f5;
}

.left-nav .item {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}

.right-nav {
  margin-left: 180rpx;
  box-sizing: border-box;
}

.filter-column .item-bd .radio.is_checked {
  color: #f40;
  border: 1rpx solid #f40;
  box-sizing: border-box;
  background: #fff;
}

.filter-column .item-bd .radio-wrap {
  display: flex;
  flex-wrap: wrap;
}

.filter-column .item-bd .radio {
  display: flex;
  width: 120rpx;
  height: 60rpx;
  font-size: 22rpx;
  color: #666;
  justify-content: center;
  align-items: center;
  background-color: #efefef;
  border-radius: 8rpx;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.radio-hide {
  position: absolute;
  width: 100%;
  opacity: 0;
}

.filter-column .ft-btns {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 80rpx;
}

.filter-column .ft-btns view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}

.filter-column .ft-btns view.recharge {
  background-color: #fff;
  color: #333;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
}

.filter-column .ft-btns view.ok {
  background-color: #f40;
}

.mb-80 {
  margin-bottom: 80rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.banner-wrap{
  background: #fff;
  padding-bottom: 20rpx;
}

.weui-search-bar{
  background: #fff;
  border: none;
}

.weui-search-bar__label{
  background: #f5f5f5
}