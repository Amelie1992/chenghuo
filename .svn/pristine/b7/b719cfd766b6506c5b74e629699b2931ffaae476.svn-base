/* 用以展示被底部fixed按钮遮挡的内容 */

.page {
  padding-bottom: 100rpx;
}

.banner swiper {
  height: 750rpx;
}

.banner image {
  width: 750rpx;
  height: 750rpx;
}

.detail {
  background-color: #fff;
  padding: 20rpx 32rpx;
}

.detail text {
  display: flex;
}

.detail .title {
  font-size: 28rpx;
  color: #333;
  line-height: 36rpx;
  overflow: hidden;
}

.detail .slogan {
  font-size: 24rpx;
  color: #999;
  width: 100%;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}

.detail .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 30rpx;
}

.detail .price .group {
  display: flex;
}

.detail .price .newPrice {
  font-size: 28rpx;
  color: #f40;
}

.detail .price .oldPrice {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  padding-left: 30rpx;
  align-self: center;
}

.detail .price .salesNum {
  font-size: 24rpx;
  color: #666;
}

.panel {
  background: #fff;
  padding: 0 32rpx;
}

.panel-hd {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.panel-hd-label {
  display: flex;
  justify-content: space-between;
}

.panel-hd-label .label {
  display: flex;
}

.panel-hd-label .label text {
  display: flex;
  font-size: 28rpx;
  color: #333;
}

.panel-hd-label .label text.strong {
  color: #f40;
  padding-left: 20rpx;
}

.panel-hd-con text {
  font-size: 24rpx;
  color: #666;
  display: flex;
  text-indent: 10%;
}

.panel-bd.hide {
  height: 0;
  overflow: hidden;
}

.panel-bd rich-text {
  display: flex;
  overflow: hidden;
}

.panel-bd .promise {
  display: flex;
  /* justify-content: space-around; */
  padding: 10rpx 0;
}

.panel-bd .promise .block {
  display: flex;
  align-items: center;
  color: #f40;
}

.panel-bd .promise text {
  display: flex;
  font-size: 24rpx;
  color: #333;
  padding-left: 5rpx;
}
.promise text:nth-child(1){
  color:#999999;
  font-size:28rpx;
}
.promise text:nth-child(2){
  font-size:28rpx;
  color:#333333;
  padding-left:26rpx;
}
.goods_details{
  height:60rpx;
  line-height:0rpx;
  text-align:center;
  padding-top:20rpx;
}
.details_line_left{
  display:flex;
  width:260rpx;
  border-top:1px solid #ccc;
}
.details_line_right{
  display:flex;
  width:260rpx;
  border-top:1px solid #ccc;
  float: right;
}
.spec-wrap {
  padding: 20rpx 0;
}
.details_txt{
  color:#333333;
  font-size:36rpx;
  vertical-align:-2rpx;
}

.spec-wrap .title {
  font-size: 24rpx;
  color: #333;
  display: flex;
  margin-bottom: 10rpx;
}

.spec-wrap .info .info-cell {
  display: flex;
  padding-left: 40rpx;
}

.spec-wrap .info .info-cell .goods-key {
  font-size: 22rpx;
  color: #666;
}

.spec-wrap .info .info-cell .goods-val {
  font-size: 22rpx;
  color: #999;
  padding-left: 20rpx;
}

.pro-pic {
  padding: 32rpx 20rpx;
  background: #fff;
}

/* btn */

.btn-wrap {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  z-index: 100;
}

.btn-wrap button {
  width: 15%;
  height: 100%;
  border: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  line-height: 1;
  font-size: 28rpx;
  border-radius: 0;
}

.btn-wrap text {
  color: #999;
  display: flex;
  padding-top: 5rpx;
  font-size: 24rpx;
}

.icon-custom {
  font-size: 48rpx;
  color: #999;
}

.icon-heart {
  font-size: 48rpx;
  color: #999;
}

.btn-wrap button.act-btn {
  width: 35%;
  color: #fff;
}

.btn-wrap button.buy {
  background: #21C5B4;
}

.btn-wrap button.cart {
  background: #83DBD2;
}

/* 弹出框popup */

.show-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 101;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}

.popup-contents {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  z-index: 6;
}

.pop-goods-info {
  display: flex;
  flex-wrap:wrap;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.pop-img-box {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 26rpx;
}

.pop-img-box .goods-thumbnail {
  width: 120rpx;
  height: 120rpx;
}

.pop-goods-title {
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 26rpx;
  color: #000;
}

.pop-goods-price {
  font-size: 26rpx;
  color: #f40;
  margin-top: 20rpx;
}

.pop-goods-close {
  width: 36rpx;
  height: 36rpx;
  flex: 1;
  background: url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
  background-size: 36rpx auto;
  align-self: flex-start;
  margin-top: -10rpx;
}

.size-label-box  .label {
  font-size: 26rpx;
  color: #000;
  padding-left: 30rpx;
  padding: 30rpx 0 20rpx 30rpx;
}

.size-label-box .label-item-box {
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap: wrap;
}

.size-label-box .label-item {
  font-size: 26rpx;
  color: #000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
}

.size-label-box .label-item.active {
  color: #f40;
  border: 1px solid #f40;
}

.buy-num-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 48rpx 0;
  margin-left: 30rpx;
  /* border-top: 1px solid #eee; *//* margin-top: 30rpx; */
  align-items: center;
}

.num-label {
  font-size: 26rpx;
  color: #000;
}

.buy-num-box .num-box {
  display: flex;
}

.buy-num-box .num-box .num-jian, .buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia {
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}

.buy-num-box .num-box .num-input {
  font-size: 28rpx;
}

.buy-num-box .num-box .num-input input {
  height: 100%;
}

.popup-join-btn {
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: rgb(33,197,180);
}

.buy-num-box .num-box .hui {
  background-color: #f5f5f9;
}

.to-pay-allNum {
  display: inline;
  font-size: 12px;
}

.contact-button {
  position: relative;
}

.contact-button contact-button {
  position: absolute;
  opacity: 0;
}
.icon-heart-fill{
  font-size: 48rpx;
  color: #ff4400;
}

.pro-pic image{
  width: 100% !important;
  margin: 0 auto;
}
.mr-10{
  margin-right: 10rpx;
}
.customer{
  width: 40rpx;
  height: 40rpx;
}
.collection{
  width: 42rpx;
  height: 42rpx;
  margin-top: -1px
}
 .cancel-btn{
    border: 1rpx solid #ccc;
    font-size: 25rpx;
    color: #ccc;
    margin: 0rpx 35rpx 13rpx 0rpx;
    padding: 5rpx;
    border-radius: 8%;

  
}