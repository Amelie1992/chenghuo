page {
  background: #fff;
}

image {
  width: 100%;
  margin-bottom: 20rpx;
}

.form {
  padding: 20rpx;
}

.text {
  font-size: 30rpx;
  color: #999;
  text-align: center;
}

.form input {
  background: #f5f5f5;
  padding: 20rpx;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.form button {
  background: #21c5b4;
  color: #fff;
}

