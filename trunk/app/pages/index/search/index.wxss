/* pages/index/search/index.wxss */

.weui-search-bar {
  font-size: 28rpx;
  border-top: 0 none;
  background-color: #fff;
}

.weui-search-bar__cancel-btn {
  color: #666;
}

.wxSearch {
  position: absolute;
  top: 43px;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1rpx #eee solid;
  background-color: #fff;
  z-index: 9999;
}

/** 搜索框下面的提示区域 */

.wxSearchInner {
  background-color: #fff;
}

/** 搜索热点标题 */

.wxSearchTitle {
  display: block;
  padding: 10px 5px 5px 10px;
  font-size: 13px;
  text-align: left;
}

/** 提示样式 */

.wxSearchMindKeyItem {
  padding: 10px 5px 10px 15px;
  margin-left: 10px;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 13px;
}

/** 标签样式 */

.wxSearchKeyList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #eee;
}

/** 标签样式 */

.wxSearchKeyItem {
  flex: 0 0 18%;
  font-size: 13px;
  text-align: center;
  border: 1rpx solid #eee;
  margin: 5px;
  padding: 4px 5px 4px 5px;
  border-radius: 0px;
  background-color: rgba(200, 200, 200, 0.1);
}

.wxSearchKeyItem-history {
  font-size: 13px;
  text-align: center;
  border: 1rpx solid #eee;
  margin: 5px;
  padding: 4px 5px 4px 5px;
  border-radius: 0px;
  background-color: rgba(200, 200, 200, 0.1);
}

/** 搜索记录标题栏 */

.wxSearchHistoryItem {
  padding-left: 10px;
  padding-top: 10px;
  padding-right: 5px;
  padding-bottom: 5px;
  display: flex;
}

/** 搜索记录标题 */

.wxSearchHistoryItemTitle {
  flex: 8;
  font-size: 13px;
}

/** 搜索记录删除按钮 */

.wxSearchHistoryItemDel {
  flex: 1;
  font-size: 13px;
  text-align: center;
  padding-top: 2px;
  padding-bottom: 2px;
  border: 1rpx solid #eee;
  border-radius: 2px;
}

/*商品列表 */

.hot-goods {
  background-color: #fff;
}

.hot-goods .hot-con {
  padding: 0 32rpx;
}

.hot-goods .hot-con .box {
  width: 48%;
  display: flex;
  flex-direction: column;
  align-items: center;
  float: left;
  margin-right: 4%;
  margin-bottom: 40rpx;
}

.hot-goods .hot-con .box:nth-child(2n) {
  margin-right: 0;
}

.hot-goods .hot-con .box .good-img {
  width: 320rpx;
  height: 320rpx;
  border-radius: 5rpx;
}

.hot-goods .hot-con .box .title {
  padding-top: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  text-align: center;
}

.hot-goods .hot-con .box .title .brand {
  font-size: 28rpx;
  color: #666;
  width: 100%;
}

.hot-goods .hot-con .box .title .series {
  font-size: 24rpx;
  color: #999;
  width: 100%;
}

.hot-goods .hot-con .box .title .price {
  font-size: 26rpx;
  color: #f40;
}
.no-goods {
  height: 500rpx;
  color: #999;
  text-align: center;
  font-size: 26rpx;
}

.no-goods .iconfont {
  padding-top: 320rpx;
  font-size: 72rpx;
  font-weight: 600;
  line-height: 100rpx;
  color: rgb(190, 186, 186);
}