/* pages/save/index.wxss */

.container {
  min-height: 100%;
  border-top: 1px solid #ccc;
  background-color: #f4f5f9;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  background-color: #ff4400;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.content {
  display: flex;
}

.content .icon {
  margin-right: 30rpx;
  text-align: center;
}

.content .icon .iconfont {
  display: inline-flex;
  line-height: 90rpx;
  color: #fff;
}

.icon-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 4px;
}
.icon-box image{
  width: 100%;
  height: 100%;
}
.goods-price{
