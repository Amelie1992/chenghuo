.top-content {
  padding: 0 30rpx 30rpx 30rpx;
  background: #fff;
}

.step-container .list {
  list-style: none;
  width: 33.4%;
  font-size: 26rpx;
  display: inline-table;
  vertical-align: top;
}

.step-container .list .arrow {
  display: block;
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  width: 70%;
  background: #ccc;
  text-align: center;
  padding: 0 10rpx 0 60rpx;
  position: relative;
  margin: 0 10rpx 0 0;
  /* font-size: 20rpx; */
  text-decoration: none;
  color: #333;
}

.step-container .list .arrow:after {
  content: "";
  border-top: 40rpx solid transparent;
  border-bottom: 40rpx solid transparent;
  border-left: 40rpx solid #ccc;
  position: absolute;
  right: -38rpx;
  top: 0;
  z-index: 1;
}

.step-container .list .arrow:before {
  content: "";
  border-top: 40rpx solid transparent;
  border-bottom: 40rpx solid transparent;
  border-left: 40rpx solid #fff;
  position: absolute;
  left: 6rpx;
  top: 0;
}

.step-container .list:first-child .arrow {
  padding-left: 50rpx;
  padding-right: 20rpx;
}

.step-container .list:first-child .arrow:before {
  display: none;
}

.step-container .list:last-child .arrow {
  padding-right: 20rpx;
}

.step-container .list:last-child .arrow:after {
  display: none;
}

.step-container .list .arrow.active {
  background: #306ba8;
  color: #fff;
}

.step-container .list .arrow.active:after {
  border-left: 40rpx solid #306ba8;
}

