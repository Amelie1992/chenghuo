/* pages/cricle-detail/index.wxss */

.weui-cells {
  font-size: 28rpx;
  color: #666;
}

.weui-cells__title.title {
  color: #333;
  display: flex;
  justify-content: space-between;
  margin: 0;
  background-color: #fff;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #ddd;
}

.image-box {
  display: flex;
  background-color: #fff;
  padding-left: 30rpx;
  padding-top: 30rpx;
  width: 720rpx;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.image-item {
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: 210rpx;
  height: 260rpx;
}

.image-con {
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  box-sizing: border-box;
  width: 210rpx;
  height: 210rpx;
  vertical-align: middle;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.image-text {
  color: #666;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center;
}

.note {
  width: 640rpx;
  color: #666;
  font-size: 22rpx;
}

.weui-cells__title.status {
  color: #666;
  margin: 0;
  background-color: #fff;
  padding-top: 15rpx;
}

.status-info {
  color: #666;
  font-size: 24rpx;
  background-color: #fff;
  padding: 15rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}
